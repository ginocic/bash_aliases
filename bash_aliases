alias upd='sudo apt update'
alias upg='sudo apt upgrade -y'
alias upgfull='sudo apt full-upgrade -y'
alias upgdist='sudo apt dist-upgrade -y'
alias aggiorna='sudo apt update && sudo apt upgrade -y'
alias ripulisci='sudo apt autoremove -y'
alias riavvia='sudo reboot'
alias spegni='sudo shutdown now'

echo "        Sistema: upd     | aggiorna | ripulisci"
echo "                 upg     | upgfull  | upgdist  "
echo "                 riavvia | spegni              "
